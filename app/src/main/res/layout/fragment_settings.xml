<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.SettingsFragment">

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_black"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/black"
            app:tint="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Settings"
            android:textSize="20dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:textStyle="bold"
            android:layout_toEndOf="@id/backBtn"
            android:layout_marginStart="35dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarRl"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/searchEt"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rect_01"
                android:backgroundTint="@color/colorGray00"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_search_black"
                android:gravity="center_vertical"
                android:hint="Search"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorGray02" />

            <TextView
                android:id="@+id/followTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Follow and invite friends"
                android:drawableStart="@drawable/ic_person_outline_black"
                android:layout_below="@id/searchEt"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/notificationTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Notifications"
                android:drawableStart="@drawable/ic_person_outline_black"
                android:layout_below="@id/followTv"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/privacyTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Privacy"
                android:drawableStart="@drawable/ic_person_outline_black"
                android:layout_below="@id/notificationTv"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/securityTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Security"
                android:drawableStart="@drawable/ic_person_outline_black"
                android:layout_below="@id/privacyTv"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/adsTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Ads"
                android:drawableStart="@drawable/ic_person_outline_black"
                android:layout_below="@id/securityTv"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/accountTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Account"
                android:drawableStart="@drawable/ic_person_outline_black"
                android:layout_below="@id/adsTv"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/helpTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Help"
                android:drawableStart="@drawable/ic_person_outline_black"
                android:layout_below="@id/accountTv"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/aboutTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="About"
                android:drawableStart="@drawable/ic_person_outline_black"
                android:layout_below="@id/helpTv"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/themeTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Theme"
                android:drawableStart="@drawable/ic_person_outline_black"
                android:layout_below="@id/aboutTv"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/loginTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Logins"
                android:layout_below="@id/themeTv"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:layout_marginStart="10dp"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/logoutTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@id/loginTv"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:drawablePadding="20dp"
                android:fontFamily="@font/seg_ui_semibold"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="Log out anuragkasnjfnoiuw"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_circle00"
        android:backgroundTint="@color/white"
        android:elevation="45dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


</RelativeLayout>