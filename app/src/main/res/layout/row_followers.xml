<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIv"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_person_outline_black"
            android:backgroundTint="@color/colorGray01"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/red"
            app:civ_border_width="1dp"
            app:tint="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/profileIv">

            <TextView
                android:id="@+id/usernameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Anurag_kashyap_82"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/usernameTv"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="Anurag Kashyap"
                android:textColor="@color/colorGray02" />

            <Button
                android:id="@+id/unFollowBtn"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/segoe_ui_bold"
                android:text='Remove'
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:textAllCaps="false"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                app:backgroundTint="@color/colorGray00" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>