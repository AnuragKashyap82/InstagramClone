<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_bg">

    <View
        android:id="@+id/view"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_rect_01"
        android:backgroundTint="@color/colorGray02" />


    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/view"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/shareLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/shareBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_black"
                app:tint="@color/black"
                android:background="@drawable/shape_circle00"
                android:padding="14sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/seg_ui_semibold"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linkLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/libkBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_link_black"
                app:tint="@color/black"
                android:background="@drawable/shape_circle00"
                android:padding="14sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/seg_ui_semibold"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reportLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/reportBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_report_black"
                app:tint="@color/black"
                android:background="@drawable/shape_circle00"
                android:padding="14sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/seg_ui_semibold"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/colorGray02"
        android:layout_below="@id/topRl"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/addFavTv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/view2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/seg_ui_semibold"
        android:gravity="center_vertical"
        android:text="Add To Favorites"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/hideTv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/addFavTv"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/seg_ui_semibold"
        android:gravity="center_vertical"
        android:text="Hide"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/followTv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/hideTv"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/seg_ui_semibold"
        android:gravity="center_vertical"
        android:text="follow"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/archiveTv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:text="Archive"
        android:textColor="@color/black"
        android:layout_below="@id/followTv"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/seg_ui_semibold"/>

    <TextView
        android:id="@+id/deleteTv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:text="Delete"
        android:textColor="@color/black"
        android:layout_below="@id/archiveTv"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/seg_ui_semibold"/>

    <TextView
        android:id="@+id/editTv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:text="Edit"
        android:textColor="@color/black"
        android:layout_below="@id/deleteTv"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/seg_ui_semibold"/>

    <TextView
        android:id="@+id/hideLikeCountTv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/editTv"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/seg_ui_semibold"
        android:gravity="center_vertical"
        android:text="Hide like count"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/turnCommentTv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:text="Turn off Commenting"
        android:textColor="@color/black"
        android:layout_below="@id/hideLikeCountTv"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/seg_ui_semibold"/>

</RelativeLayout>